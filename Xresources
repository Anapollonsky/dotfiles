!!! urxvt
URxvt.depth: 32

URxvt.font: xft:DejaVu Sans Mono:size=12:antialias=true
URxvt.foreground: #EEEEFF
URxvt.letterSpace: -1

URxvt.background: [97]#171722
URxvt.scrollBar: false

URxvt*pointerColor: #000000
URXvt*pointerColor2: #FF0000
URxvt*cursorColor: #FF0000
URxvt*cursorColor2: #FF0000
URxvt*cursorBlink: true

! scroll in pagers properly
URxvt.secondaryScreen: 1
URxvt.secondaryScroll: 0

URxvt.perl-lib: /usr/lib64/urxvt/perl/
URxvt.perl-ext-common: ...,keyboard-select,clipboard,url-select
! Selection tools for urxvt. Requires keyboard-select from urxvt-perls
URxvt.keysym.M-Escape: perl:keyboard-select:activate

! Allow proper copy/paste. Requires clipboard from urxvt-perls
URxvt.keysym.M-w:   perl:clipboard:copy
URxvt.keysym.M-y:   perl:clipboard:paste
URxvt.keysym.M-C-y: perl:clipboard:paste_escaped

! Handle URLs from the terminal. Requires url-select from urxvt--perls
URxvt.keysym.M-u: perl:url-select:select_next

! This will cause the shell to be started as a login shell, like the option -ls.
URxvt*loginShell: true

! color replacement
! red
URxvt*color1: #ff7766
URxvt*color9: #ff7766
! green
URxvt*color2: #32cd32
URxvt*color10: #32cd32
! yellow
URxvt*color3: #fff088
URxvt*color11: #fff088 
! blue
URxvt*color4: #4070e0
URxvt*color12: #4070e0
! purple
URxvt*color5: #9070e0
URxvt*color13: #9070e0
!cyan
URxvt*color6: #00bfff
URxvt*color14: #00bfff

!!! xterm
