! Used to configure URxvt, the terminal emulator.

URxvt.depth: 32

URxvt.font: xft:DejaVu Sans Mono:size=10.5:antialias=true
URxvt.foreground: #D5D5F5
URxvt.letterSpace: -1

URxvt.background: #171722
URxvt.scrollBar: false

! scroll in pagers properly
URxvt.secondaryScreen: 1
URxvt.secondaryScroll: 0

! Selection tools for urxvt. Requires keyboard-select from urxvt-perls
URxvt.perl-ext-common: ...,keyboard-select
URxvt.keysym.M-Escape: perl:keyboard-select:activate

! Allow proper copy/paste. Requires clipboard from urxvt-perls
URxvt.perl-ext-common: ...,clipboard
URxvt.keysym.M-c:   perl:clipboard:copy
URxvt.keysym.M-v:   perl:clipboard:paste
URxvt.keysym.M-C-v: perl:clipboard:paste_escaped

! This will cause the shell to be started as a login shell, like the option -ls.
URxvt*loginShell: true

! Replace nasty blue with something else
URxvt*color4: #009B7B
URxvt*color12: #009B7B