" Settings
set hud
set smoothscroll
set noautofocus
set dimhintcharacters
set autohidescrolling
let vimcommand  = "emacsclient -c"
let scrollduration = 300
let searchlimit = 30
let scrollstep = 70
let barposition = "top"

let completionengines = ["google", "amazon", "imdb", "wikipedia"]

" blacklists prefixed by '@' act as a whitelist
let blacklists = ["https://mail.google.com/*", "*://mail.google.com/*", "@https://mail.google.com/mail/*"]

let mapleader = " "

" Mappings
map <Leader>r reloadTabUncached
map <Leader>x :restore<Space>
" unmap <Leader>e
imap <C-e> editWithVim
